model Post {
    id          String    @id @default(uuid())
    thumb       String
    title       String
    summary     String?
    body        String
    slug        String?   @unique
    keywords    String?
    description String?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    tags        Tag[]     @relation("tag_to_posts")
    categoryId  String?
    category    Category? @relation(fields: [categoryId], references: [id])

    @@map("posts")
}
